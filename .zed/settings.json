// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
	"languages": {
		"JSON": {
			"format_on_save": "on",
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			}
		},
		"JSONC": {
			"format_on_save": "on",
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			}
		},
		"TSX": {
			"code_actions_on_format": {
				"source.fixAll.eslint": true,
				"source.organizeImports.biome": true
			},
			"format_on_save": "on",
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			}
		},
		"TypeScript": {
			"code_actions_on_format": {
				"source.fixAll.eslint": true,
				"source.organizeImports.biome": true
			},
			"format_on_save": "on",
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			}
		},
		"JavaScript": {
			"code_actions_on_format": {
				"source.fixAll.eslint": true,
				"source.organizeImports.biome": true
			},
			"format_on_save": "on",
			"formatter": {
				"language_server": {
					"name": "biome"
				}
			}
		}
	}
}
